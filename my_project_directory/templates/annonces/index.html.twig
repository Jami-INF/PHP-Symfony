{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block body %}
    <a href="{{ path('app_add_annonces') }}" class="btn btn-primary">Ajouter une annonce</a>
    <div class="example-wrapper">
        {% for annonce in annonces %}
           <div class="card-body">
               <h2 class="text-primary">{{ annonce.titre }} ({{ annonce.dateCreation|date('d/m/Y') }})</h2>
               <h3>Categories : {{ annonce.categorie.nom }}</h3>
               <p>{{ annonce.Contenu }}</p>
           </div>

        {% endfor %}
    </div>
{% endblock %}
